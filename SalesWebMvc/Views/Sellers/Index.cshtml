@model IEnumerable<SalesWebMvc.Models.Seller>


@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<div class="container-fluid">
    <a type="button" class="btn btn-default btn-sm" asp-action="Create"> Create New</a>
</div><br />
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>

            <th>@Html.DisplayNameFor(model => model.Email)</th>

            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>

            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
            <td>@Html.DisplayFor(modelItem => item.BaseSalary)</td>
            <td>
                <a type="button" class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a type="button" class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a type="button" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>
<div class="container-fluid">
    <a type="button" class="btn btn-default btn-md" href="~/Home/index">Voltar</a>
</div>
