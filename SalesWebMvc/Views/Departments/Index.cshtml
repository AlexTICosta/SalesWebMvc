@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/DepartmentIndex.css" />
<h2>Index</h2>

<p>
    <a type="button" class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a  type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a  type="button" class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a  type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
